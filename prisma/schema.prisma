datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum RoleType {
  regular
  cashier
  manager
  superuser
}

enum TransactionType {
  purchase
  redemption
  adjustment
  event
  transfer
}

enum PromotionType {
  automatic
  onetime
}

model User {
  id       Int    @id @default(autoincrement())
  utorid   String
  name     String
  birthday DateTime?
  points  Int     @default(0)
  createdAt DateTime @default(now())
  lastLogin DateTime?
  avatarUrl String?
  password String
  email    String  @unique
  role     RoleType @default(regular)
  verified Boolean  @default(false)
}
